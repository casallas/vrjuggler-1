default: all

# Include common definitions.
include @topdir@/make.defs.mk

includedir=	@includedir@/vrj/Draw/OpenGL
srcdir=		@srcdir@
top_srcdir=	@top_srcdir@
INSTALL=	@INSTALL@
SUBOBJDIR=	$(GL_LIBRARY)
DIRPRFX=	vrj/Draw/OpenGL/
SUBDIR=

SRCS=		App.cpp				\
		BasicSimulator.cpp		\
		DrawAxesFunctorsCore.cpp	\
		DrawAxesFunctors.cpp		\
		DrawHeadFunctorsCore.cpp	\
		DrawHeadFunctors.cpp		\
		DrawManager.cpp			\
		DrawWandFunctorsCore.cpp	\
		DrawWandFunctors.cpp		\
		ExtensionLoader.cpp		\
		ExtensionLoaderGL.cpp		\
		ExtensionLoaderGLCore.cpp		\
		Pipe.cpp			\
		ProcApp.cpp			\
		SimInterface.cpp		\
		SimInterfaceFactory.cpp		\
		UserData.cpp			\
		Window.cpp

ifeq (@OS_TYPE@, Win32)
   SRCS+=	ExtensionLoaderWGL.cpp	\
		WindowWin32.cpp
else
   ifeq (@PLATFORM@, Darwin)
      ifeq (@GADGET_USE_X11@, yes)
         SRCS+=	ExtensionLoaderGLX.cpp	\
	 	WindowXWin.cpp
      else
         SRCS+=	VRJOpenGLView.mm	\
		WindowCocoa.mm
      endif
   else
      SRCS+=	ExtensionLoaderGLX.cpp	\
		WindowXWin.cpp
      SUBDIR=	GL
   endif
endif

include $(MKPATH)/dpp.obj-subdir.mk

